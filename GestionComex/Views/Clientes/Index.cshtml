@model IEnumerable<Clientes>
@{
    ViewData["Title"] = "Clientes";
}
@section Styles {
    <link rel="stylesheet" href="~/css/clientes.css" asp-append-version="true" />
}


<h1>Listado de Clientes</h1>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
@*             <th>ID</th>
 *@            <th>CUIT</th>
            <th>Razón Social</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
@*                 <td>@cliente.Id</td>
 *@                <td>@cliente.CUIT</td>
                <td>@cliente.RazonSocial</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Direccion</td>
                <td>
                    @if (cliente.Activo)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Id" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@cliente.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>